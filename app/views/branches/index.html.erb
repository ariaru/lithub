<p id="notice"><%= notice %></p>

<h1>Listing Branches</h1>

<table>
  <thead>
    <tr>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= link_to 'Show', document_branch_path(branch.document_id, branch.id) %></td>
        <td><%= link_to 'Edit', edit_document_branch_path(branch.document_id, branch.id) %></td>
        <td><%= link_to 'Destroy', document_branch_path(branch.document_id, branch.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Branch', new_document_branch_path %>
