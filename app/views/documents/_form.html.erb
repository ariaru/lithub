<%= form_for [@branch, @document] do |f| %>

  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
  </div>

  <%= f.fields_for :revisions do |ff| %>
    <div class="form-group">
      <%= ff.label :summary %>
      <%= ff.text_area :summary, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= ff.label :body, "Main Text" %>
      <%= ff.text_area :body, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= ff.label :tags %>
      <%= ff.text_field :tags, class: 'form-control' %>
    </div>

    <% if @current_revision %>
      <%= ff.hidden_field :parent_id, value: @current_revision.id %>
    <% end %>

    <%= f.submit 'Save as draft', class: 'btn btn-default' %>

    <div>
      </br>
      <p><h4><strong></strong>OR add a message and publish this text:</strong></h4></p>
    </div>

    <div class="form-group">
      <%= ff.label :commit_message, "Important changes since the last published version of this text (if there is one)" %>
      <%= ff.text_field :commit_message, class: 'form-control' %>
    </div>

    <%= f.submit 'Publish', class: 'btn btn-primary'%>

  <% end %>

<% end %>
