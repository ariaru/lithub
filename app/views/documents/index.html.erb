<p id="notice"><%= notice %></p>

<h1>Documents on Branch <%= @branch.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= link_to 'Show', branch_document_path(document.branch_id, document.id) %></td>
        <td><%= link_to 'Edit', edit_branch_document_path(document.branch_id, document.id) %></td>
        <td><%= link_to 'Destroy', branch_document_path(document.branch_id, document.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_branch_document_path %>

